<div class="ui list">
  <div class="item">
    <img class="ui top aligned avatar image" src="http://www.toonpool.com/user/1631/files/passenger_treatment_today_1144595.jpg">
    <div class="content">
      <div class="header">Welcome back: <%=@passenger.name%></div>
      Your flights
      <div class="list">
      <% if !@passenger.flights.blank? %>
        <% for flight in @passenger.flights %>
	        <div class="item">
	          <i class="right triangle icon"></i>
	          <div class="content">
	            <a class="header">Number:   <i><%=flight.number%></i></a>
	            <div class="description">
	            	<div class="ui bulleted list">
	            		<p class="item">airline: <%=flight.airline.name%></p>
	            		<p class="item">Departure:  <%=flight.departure.date%></p>
	            		<p class="item">Arrival: <%=flight.arrival.date%></p>
	            	</div>
	           	</div>
	          </div>
	        </div>
        <% end %>
      <% else %>
        	<div class="item">
	          <i class="right triangle icon"></i>
	          <div class="content">
	            <a class="header"><strong>No passenger's yet</strong> <%=%></a>
	            <div class="description">all seats are available</div>
	          </div>
	        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>